@model IEnumerable<CartItem>

<h1>Koszyk</h1>

<table class="table">
	<tr>
		<th>Tytuł filmu</th>
		<th>Ilość</th>
		<th>Cena</th>
		<th></th>

	</tr>
	@if(Model != null)
	@foreach(var item in Model)
	{
		
		<tr>
			<td>@item.Film.Title</td>
			<td>@item.Quantity</td>
			<td>@item.Price</td>
			<td><a href="@Url.Action("Remove","Cart", new {id=item.Film.Id})" class="btn btn-primary">Usuń</a></td>
		</tr>
	}
</table>
<div>
	Razem: @ViewBag.totalPrice zł
</div>