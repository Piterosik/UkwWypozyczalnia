@model IEnumerable<Film>

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>Tytuł filmu</th>
            <th>Reżyser</th>
            <th>Cena</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null)
        @foreach (var film in Model)
        {
            <tr>
                <td>@film.Title</td>
                <td>@film.Director</td>
                <td>@film.Price</td>
                <td><a href="@Url.Action("EditFilm", "Films", new { id=film.Id })" class="btn btn-primary">Edytuj</a></td>
                <td><a href="@Url.Action("Buy", "Cart", new { id=film.Id })" class="btn btn-primary">Kup</a></td>
            </tr>
        }
    </tbody>
</table>